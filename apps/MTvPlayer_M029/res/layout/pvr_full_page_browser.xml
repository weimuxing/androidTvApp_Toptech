<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="480dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:id="@+id/lcninfo"
            android:layout_width="400dip"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pvr_lcn_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="46dip"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/str_pvr_lcn_textview"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/pvr_channel_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/str_pvr_channel_textview"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/pvr_program_service_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="@string/srt_pvr_program_service_textview"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <ListView
                android:id="@+id/pvr_listview"
                android:layout_width="fill_parent"
                android:layout_height="412dip"
                android:listSelector="@drawable/button_state" />

            <LinearLayout
                android:layout_width="412dip"
                android:layout_height="21dip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="11dip"
                    android:layout_height="11dip"
                    android:layout_marginLeft="67dip"
                    android:layout_marginTop="7dip"
                    android:src="@drawable/icon_tips_red" />

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="24dip"
                    android:gravity="center|left"
                    android:text="@string/str_pvr_program_service_tips_red"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="11dip"
                    android:layout_height="11dip"
                    android:layout_marginTop="7dip"
                    android:src="@drawable/icon_tips_green" />

                <TextView
                    android:id="@+id/pvr_tips_green"
                    android:layout_width="100dip"
                    android:layout_height="24dip"
                    android:gravity="center|left"
                    android:text="@string/str_pvr_program_service_tips_green"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="11dip"
                    android:layout_height="11dip"
                    android:layout_marginTop="7dip"
                    android:src="@drawable/icon_tips_blue" />

                <TextView
                    android:id="@+id/pvr_tips_blue"
                    android:layout_width="100dip"
                    android:layout_height="24dip"
                    android:gravity="center|left"
                    android:text="@string/str_pvr_program_service_tips_blue"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/lcninfo"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pvr_lcn_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/str_pvr_lcn_title"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pvr_lcn_record_data"
                        android:layout_width="wrap_content"
                        android:layout_height="17dip"
                        android:text="@string/str_pvr_lcn_record_data"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/pvr_lcn_data"
                        android:layout_width="wrap_content"
                        android:layout_height="17dip"
                        android:text="@string/str_pvr_lcn_data"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="349dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >
                <SurfaceView
                    android:id="@+id/pvr_lcn_img"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="13dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center" >
                <com.mstar.tv.tvplayer.ui.pvr.TextProgressBar
                    android:id="@+id/pvr_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="400dip"
                    android:layout_height="wrap_content"
                    android:secondaryProgress="100"
                    android:src="@drawable/tv_record_list_timeline_bg" />
                 <TextView android:id="@+id/total_time"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:textSize="12dip"
                     android:layout_gravity="top"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
